<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/placeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="8dp"
            android:text="(현재위치)"
            android:fontFamily="@font/hangulnuri"
            android:textSize="18sp"
            />

        <LinearLayout
            android:id="@+id/cityLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/siText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="로딩중"
                android:fontFamily="@font/hangulnuribold"
                android:font="@font/hangulnuribold"
                android:textStyle="bold"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/dongText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="로딩중"
                android:fontFamily="@font/hangulnuribold"
                android:font="@font/hangulnuribold"
                android:textStyle="bold"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hangulnuri"
                android:inputType="date"
                android:gravity="center"
                android:text="로딩중"
                android:textSize="21sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/emoImage"
            android:layout_width="278dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/watericon" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/classText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="로딩중"
            android:textStyle="bold"
            android:fontFamily="@font/hangulnuribold"
            android:textSize="24sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="로딩중"
            android:fontFamily="@font/hangulnuri"
            android:textSize="18sp" />
        <!-- 이미지 넣어서 절취선 -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detailBaseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >

                <TableLayout
                    android:id="@+id/detailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/com_rounded_topcorner"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/componentText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="성분"
                            android:fontFamily="@font/hangulnuribold"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/numberText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="수치"
                            android:fontFamily="@font/hangulnuribold"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/stateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="상태"
                            android:fontFamily="@font/hangulnuribold"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/com_rounded_corner"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/PHText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PH"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/PHText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/PHText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/com_rounded_corner"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/colorText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="색깔"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/colorText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/colorText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/com_rounded_corner"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/darkText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="탁도"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/darkText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/darkText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/com_rounded_corner"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/tasteText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="맛"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tasteText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tasteText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/com_rounded_corner"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/smellText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="냄새"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/smellText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/smellText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/com_rounded_bottomcorner"
                        android:padding="5dp">
                        <TextView
                            android:id="@+id/clText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="잔류 염소"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/clText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/clText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로딩중"
                            android:fontFamily="@font/hangulnuri"
                            android:textSize="18sp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>